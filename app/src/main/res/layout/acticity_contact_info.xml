<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_return"/>
        <TextView
            android:id="@+id/addressBook"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#1296db"
            android:textSize="16sp"
            android:text="通讯录"/>

        <TextView
            android:id="@+id/modify"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="#1296db"
            android:textSize="16sp"
            android:text="编辑"/>
    </RelativeLayout>
    
    <TextView
        android:id="@+id/avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/head_bg"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:text="李"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>
    
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_font_bg_dark"
        android:text="李自坤"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/sendMessage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/ic_message"/>

        <TextView
            android:id="@+id/call"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/ic_dialpad"/>

        <TextView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/ic_live"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_email"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="-3dp"
        android:gravity="center">
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="#1296db"
            android:text="信息"/>

        <TextView
            android:layout_width="30dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:textSize="10sp"
            android:textColor="#1296db"
            android:text="拨号"/>

        <TextView
            android:layout_width="35dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:textSize="10sp"
            android:textColor="#1296db"
            android:text="视屏"/>

        <TextView
            android:layout_width="38dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#1296db"
            android:text="邮件"/>
    </LinearLayout>
    
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/text_font_bg_dark"
        android:text="家庭"/>

    <TextView
        android:id="@+id/phoneNum"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="25dp"
        android:text="123475943847"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/line_bg"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/text_font_bg_dark"
        android:text="备注"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/line_bg"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/text_font_blue"
        android:text="发送信息"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/line_bg"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/text_font_blue"
        android:text="共享联系人"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/line_bg"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/text_font_blue"
        android:text="添加到个人收藏"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/line_bg"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/text_font_blue"
        android:text="阻止此联系人"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/line_bg"/>

    <TextView
        android:id="@+id/delete"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/text_font_red"
        android:text="删除联系人"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/line_bg"/>
</LinearLayout>